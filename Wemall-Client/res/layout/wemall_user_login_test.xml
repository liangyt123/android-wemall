<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginpage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="210dp"
        android:layout_height="130dp"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="46.0dip"
        android:background="@drawable/wemall_welcome_step4" />

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:background="@drawable/login_input"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/wemall_login_account"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:hint="请输入手机号"
            android:inputType="number"
            android:drawableLeft="@drawable/yonghu"
            android:maxLength="16"
            android:maxLines="1"
            android:drawablePadding="5.0dp"
            android:paddingLeft="6.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <EditText
            android:id="@+id/wemall_login_passwd"
            android:drawableLeft="@drawable/suo"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:drawablePadding="3.0dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="5.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:textSize="16.0sp" />
    </LinearLayout>
    <!--
    <LinearLayout 
        android:id="@+id/check"
        android:layout_below="@id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
       <CheckBox
            android:id="@+id/wemall_is_agree1"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="28.0dip"
            android:layout_marginRight="28.0dip"
            android:layout_marginTop="5dp"
            android:background="@drawable/wemall_check_button"
            android:checked="true"
            android:clickable="true" 
            android:text="记住密码"
            android:textColor="#ffffffff"/>
    </LinearLayout>
    -->

    <TextView
        android:id="@+id/wemall_login_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/wemall_is_agree"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="12.0dip"
        android:background="@drawable/chat_send_button_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="登录"
        android:textColor="#ff333333"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wemall_login_button"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/wemall_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:clickable="true"
            android:text="忘记密码"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wemall_regist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_regist_bg"
            android:clickable="true"
            android:gravity="left|center"
            android:paddingLeft="8.0dip"
            android:paddingRight="18.0dip"
            android:text="注册新账号"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </RelativeLayout>
   <CheckBox
            android:id="@+id/wemall_is_agree"
            android:layout_width="19.0dip"
            android:layout_height="19.0dip"
            android:layout_below="@id/input"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/wemall_check_button"
            android:button="@null"
            android:checked="true"
            android:clickable="true" />
    <TextView
            android:id="@+id/checkbox_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/wemall_is_agree"
            android:layout_below="@id/input"
            android:background="@null"
            android:clickable="true"
            android:text="记住密码"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    
</RelativeLayout>