<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:background="@drawable/wemall_alertdialog_shape"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/cartcuttitletip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/cartcuttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="商品名称"
            android:textColor="@color/gray_999999"
            android:textSize="20.0sp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray_efefef" />

    <LinearLayout
        android:id="@+id/cartcuttip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="left|center_vertical"
            android:text="确定要将此商品从购物车移除吗?"
            android:textColor="@color/gray_999999"
            android:textSize="17.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray_efefef" />

    <LinearLayout
        android:id="@+id/cartguanli"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cartcan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/wemall_white_to_gray"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/gray_999999"
            android:text="取消"
            android:textSize="18.0sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="@color/gray_efefef" />

        <TextView
            android:id="@+id/cartcut"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/wemall_white_to_gray"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/gray_999999"
            android:text="移除"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>