<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:background="@drawable/wemall_alertdialog_shape"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/tttt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/updatetiptitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:text="更新提示"
            android:textSize="22sp" />
    </LinearLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray_efefef" />
    <LinearLayout
        android:id="@+id/ttt"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/updatetip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:text=""
            android:textSize="17.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray_efefef" />

    <LinearLayout
        android:id="@+id/updatech"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/updatec"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/wemall_white_to_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textSize="18.0sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="@color/gray_efefef" />

        <TextView
            android:id="@+id/updateb"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/wemall_white_to_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="升级"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>