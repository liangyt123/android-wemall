<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wemall_all_titlebar_height"
        android:background="@color/wemall_all_titlebar_back"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/wemall_background_back"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <ImageView
                android:id="@+id/title_left_imagebutton_about"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:scaleType="center"
                android:src="@drawable/wemall_back_btn" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="4dp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/smssdk_choose_country"
                android:textColor="@color/smssdk_white"
                android:textSize="22sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="56dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/smssdk_search_icon" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:background="@drawable/smssdk_input_bg_focus"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/smssdk_search_icon" />

            <EditText
                android:id="@+id/et_put_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/smssdk_search"
                android:singleLine="true"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="17dp"
                android:layout_height="17dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:background="@drawable/smssdk_clear_search"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>